<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/list_temp_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="19dp"
        android:fontFamily="@font/nunito_bold"
        android:text="20"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="69dp"
        tools:layout_editor_absoluteY="94dp" />

    <TextView
        android:id="@+id/list_indoor_temp_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="130dp"
        android:layout_marginEnd="151dp"
        android:fontFamily="@font/nunito_bold"
        android:text="20"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/list_outdoor_temp_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="50dp"
        android:layout_marginStart="111dp"
        android:fontFamily="@font/nunito_bold"
        android:text="20"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/list_index_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/list_temp_value"
        android:layout_alignTop="@+id/list_outdoor_temp_value"
        android:fontFamily="@font/nunito_bold"
        android:text="20"
        android:textSize="20dp" />

</RelativeLayout>